<%= simple_form_for(@cleanse) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :short_description %>
    <%= f.input :long_description %>
    <%= f.input :price %>
    <%= f.input :ingredients %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
