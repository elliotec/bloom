<%#This posts to the user model through the symbol and url%>
<%= simple_form_for :user, url: '/users' do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: false, placeholder: 'Email', label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, ' Keep Me Updated! ' %>
  </div>
<% end %>
