<ul class="subnav">
  <li><%= link_to "Juices", juices_path %></li>
  <li><%= link_to "Milks", milks_path %></li>
  <li><%= link_to "Elixirs", elixers_path %></li></ul>
<section class="juice-wrapper">
  <div class="juice-photo">
    <%= image_tag @juice.photo.url(:medium) %>
  </div>

  <div class="juice-info">
    <h1><%= simple_format(@juice.name) %></h1>

    <h3>$<%= @juice.price.round %></h3>

    <p><strong><%= simple_format(@juice.ingredients) %></strong></p>

    <p><%= simple_format(@juice.long_description) %></p>

    <p><small>.50c bottle deposit is already included in this price. Please recycle this bottle by bringing it back to our shop and receive your deposit back towards your next purchase.</small></p>

    <p class="size"><small>16oz / 543ml</small></p>

    <% if @juice.previous %>
      <p class="previous"><%= link_to "< Previous", @juice.previous %></p>
    <% end %>
    <% if @juice.next %>
      <p class="next"><%= link_to "Next >", @juice.next, class: "next" %></p>
    <% end %>
  </div>

</section>


