<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Short description", :short_description %></th>
			<th><%= casein_sort_link "Long description", :long_description %></th>
			<th><%= casein_sort_link "Price", :price %></th>
			<th><%= casein_sort_link "Ingredients", :ingredients %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% milks.each do |milk| %>
		<tr>
			<td><%= casein_table_cell_link milk.name, casein_milk_path(milk) %></td>
			<td><%= casein_table_cell_link milk.short_description, casein_milk_path(milk) %></td>
			<td><%= casein_table_cell_link milk.long_description, casein_milk_path(milk) %></td>
			<td><%= casein_table_cell_link milk.price, casein_milk_path(milk) %></td>
			<td><%= casein_table_cell_link milk.ingredients, casein_milk_path(milk) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_milk_path(milk), :method => :delete, :data => { :confirm => "Are you sure you want to delete this milk?" }) %>
			</td>
		</tr>
	<% end %>
</table>