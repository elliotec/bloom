<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Short description", :short_description %></th>
			<th><%= casein_sort_link "Price", :price %></th>
			<th><%= casein_sort_link "Ingredients", :ingredients %></th>
			<th><%= casein_sort_link "Long description", :long_description %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% cleanses.each do |cleanse| %>
		<tr>
			<td><%= casein_table_cell_link cleanse.name, casein_cleanse_path(cleanse) %></td>
			<td><%= casein_table_cell_link cleanse.short_description, casein_cleanse_path(cleanse) %></td>
			<td><%= casein_table_cell_link cleanse.price, casein_cleanse_path(cleanse) %></td>
			<td><%= casein_table_cell_link cleanse.ingredients, casein_cleanse_path(cleanse) %></td>
			<td><%= casein_table_cell_link cleanse.long_description, casein_cleanse_path(cleanse) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_cleanse_path(cleanse), :method => :delete, :data => { :confirm => "Are you sure you want to delete this cleanse?" }) %>
			</td>
		</tr>
	<% end %>
</table>