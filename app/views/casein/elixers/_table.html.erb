<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Short description", :short_description %></th>
			<th><%= casein_sort_link "Long description", :long_description %></th>
			<th><%= casein_sort_link "Price", :price %></th>
			<th><%= casein_sort_link "Ingredients", :ingredients %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% elixers.each do |elixer| %>
		<tr>
			<td><%= casein_table_cell_link elixer.name, casein_elixer_path(elixer) %></td>
			<td><%= casein_table_cell_link elixer.short_description, casein_elixer_path(elixer) %></td>
			<td><%= casein_table_cell_link elixer.long_description, casein_elixer_path(elixer) %></td>
			<td><%= casein_table_cell_link elixer.price, casein_elixer_path(elixer) %></td>
			<td><%= casein_table_cell_link elixer.ingredients, casein_elixer_path(elixer) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_elixer_path(elixer), :method => :delete, :data => { :confirm => "Are you sure you want to delete this elixer?" }) %>
			</td>
		</tr>
	<% end %>
</table>